## creating a command name for a script
## new_command	_my_command_name python /path/to/script.py %{file_name} %{paper_name}

new_command _add_text python3 -m sioyek.add_text %{sioyek_path} %{local_database} %{shared_database} %{file_path} %{selected_rect} %{command_text}

new_command _next_file python3 /Users/maksim/.config/sioyek/commands/next.py "%1"
new_command _prev_file python3 /Users/maksim/.config/sioyek/commands/prev.py "%1"
new_command _load_folder python3 /Users/maksim/.config/sioyek/commands/load_folder.py "%1"

new_command _theme_gruvbox_light    /Users/maksim/.config/sioyek/commands/theme_switch.sh gruvbox_light "%0"
new_command _theme_catppuccin_mocha /Users/maksim/.config/sioyek/commands/theme_switch.sh catppuccin_mocha "%0"
new_command _theme_monokai          /Users/maksim/.config/sioyek/commands/theme_switch.sh monokai "%0"
new_command _theme_solarized_light  /Users/maksim/.config/sioyek/commands/theme_switch.sh solarized_light "%0"
new_command _theme_catppuccin_latte /Users/maksim/.config/sioyek/commands/theme_switch.sh catppuccin_latte "%0"
new_command _theme_new              /Users/maksim/.config/sioyek/commands/theme_switch.sh new "%0"
